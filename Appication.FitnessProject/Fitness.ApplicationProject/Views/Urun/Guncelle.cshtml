
@model Fitness.ApplicationProject.Models.Data.TblUrun

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post, new { enctype = "multipart/Form-data" }))
            {
                @Html.HiddenFor(x => x.UrunId)
                @*<form method="post" enctype="multipart/form-data">*@
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="UrunAdi"
                           class="form-control" value="@Model.UrunAdi" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" name="Aciklama" class="form-control" value="@Model.Aciklama" />
                </div>
                <div class="form-group">
                    <label>Önceki Resim</label>
                    <img src="~/assets/images/@Model.Resim"
                         width="90" height="90" />
                </div>
                <div class="form-group">
                    @Html.Label("Resim", new { @class = "control-label col-md-2" })
                    <input type="file" name="FileName" />
                </div>

                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" name="Fiyat"
                           class="form-control" value="@Model.Fiyat" />
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" name="Stok" class="form-control" value="@Model.Stok" />
                </div>
                <div class="form-group">
                    @Html.Label("Populer", new { @class = "control-label col-md-2" })
                    @Html.EditorFor(x => x.Populer)
                </div>

                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="~/Urun/Index">Ürün Listesi</a>
                @*</form>*@
            }

        </div>

    </div>
</div>

