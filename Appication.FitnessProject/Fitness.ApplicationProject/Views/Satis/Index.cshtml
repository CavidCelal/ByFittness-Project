@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Fitness.ApplicationProject.Models.Data.TblSatislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Satış Listesi</h2>

<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
        <th>İl</th>
        <th>Address</th>
    </tr>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.KullaniciId</td>
                    <td>@item.</td>
                    <td>@item.Adet</td>
                    <td>@item.Fiyat</td>
                    @*<td>@item.TblKullanici</td>*@
                    <td><img src="~/assets/images/@item.TblUrun.Resim" width="60" height="60"  /></td>
                    <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
                </tr>
            }
    </tbody>
</table>
<form action="/" method="post">
    <table>
        <tr>
            <td>
                <label>Address</label>
                <input type="text" name="Address" class="form-control" required />
            </td>
            <td>
              
                <label>Banka Adı</label>
                <input type="text" name="Sifre" class="form-control" />
            </td>

            <td>
                <label>İban</label>
                <input type="text" name="Sifre" class="form-control" />
            </td>


        </tr>
        
    </table>
    <button type="submit">Satın Al</button>
</form>
@Html.PagedListPager(Model, sayfa => Url.Action("Index", new {sayfa}),PagedListRenderOptions.Classic)

