@model Fitness.ApplicationProject.Models.Data.TblEgitim
@{
    ViewBag.Title = "Guncelle";
}

@using (Html.BeginForm("Guncelle", "Egitim", FormMethod.Post, new { enctype = "multipart/Form-data" }))
{
    @Html.HiddenFor(x => x.EgitimId)
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="EgitimAdi" class="form-control" value="@Model.EgitimAdi" />
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" name="Aciklama" class="form-control" value="@Model.Aciklama"/>
                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.EgitimKategoriId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" name="EgitimFiyat" class="form-control " value="@Model.EgitimFiyat" />
                </div>

                <div class="form-group">
                    <label>Hangi Günler</label>
                    <input type="text" name="EgitimGunleri" class="form-control " value="@Model.EgitimGunleri"/>
                </div>
                <div class="form-group">
                    <label>Eğitim Saatları</label>
                    <input type="text" name="EgitimSaat" class="form-control" value="@Model.EgitimSaat" />
                </div>

                <div class="form-group">
                    <label>Önceki Resim</label>
                    <img src="~/assets/images/@Model.EgitimResmi"
                         width="90" height="90" />
                </div>
                
                <div class="form-group">
                    @Html.Label("Resim", new { @class = "control-label col-md-2" })
                    <input type="file" name="FileName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Uzman</label>
                    <input type="text" name="CoachAdi" class="form-control" value="@Model.CoachAdi" />
                </div>
                <div class="form-group">
                    <label>Uzman Cinsi</label>
                    <input type="text" name="CoachCinsi" class="form-control" value="@Model.CoachCinsi"/>
                </div>
                <div class="form-group">
                    <label>Uzman Dogum Tarihi</label>
                    <input type="text" name="CoachDogumTarih" class="form-control" value="@Model.CoachDogumTarih" />
                </div>
                <div class="form-group">
                    <label>Uzman Tel</label>
                    <input type="text" name="CoachTel" class="form-control" value="@Model.CoachTel" />
                </div>
                <div class="form-group">
                    <label>Uzman Email</label>
                    <input type="text" name="CoachEmail" class="form-control" value="@Model.CoachEmail" />
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="/Egitim/Index">Eğitim Listesi</a>
            </div>
        </div>
    </div>
}

