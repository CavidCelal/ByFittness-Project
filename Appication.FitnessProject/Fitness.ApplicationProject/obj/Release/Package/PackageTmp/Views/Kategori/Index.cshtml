@using Fitness.ApplicationProject.Models.Data
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<a href="/Kategori/Ekle" class="btn btn-primary">Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Adi</th>
        <th>Açıklama</th>
        @if (User.IsInRole("A"))
        {
            <th>Sil</th>
            <th>Düzenle</th>
        }

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KategoriAdi</td>
            <td>@item.Aciklama</td>
            @if (User.IsInRole("A"))
            {
                <td>@Html.ActionLink("Sil", "Sil", new { id = item.KategoriId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
                <td><a href="~/Kategori/Guncelle/@item.KategoriId" class="btn btn-warning"> Düzenle</a></td>
            }
        </tr>
    }
</table>

